!= messages()

form.form-horizontal(method="post", action="/albums")
    fieldset
        legend= title
        .control-group
          label.control-label(for='title') Title
          .controls
            input#title.input-xlarge(type='text', name="album[title]", value=album.title, placeholder='Enter the title')
        .control-group
          label.control-label(for='desc') Body
          .controls
            textarea#desc.input-xxlarge(type='text', rows="6", name="album[description]", placeholder='Enter the album description')=album.description
        .form-actions
          button.btn.btn-primary(type='submit') Save changes
          &nbsp;
          a.btn(href='/albums', title="cancel") Cancel

